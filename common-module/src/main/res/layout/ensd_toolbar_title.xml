<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ensd_toolbar_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ensd_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:minHeight="?android:attr/actionBarSize"
        android:padding="0dp">

        <RelativeLayout
            android:id="@+id/ensd_rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/ensd_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:maxLength="8"
                android:textSize="16sp"
                tools:text="title"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/toolbar_tv_title_bttom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ensd_toolbar_title"
                android:layout_centerHorizontal="true"
                android:gravity="bottom"
                android:paddingTop="10dp"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="/search_hint"
                tools:visibility="visible" />

        </RelativeLayout>


        <TextView
            android:id="@+id/ensd_toolbar_tv_right_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:gravity="right"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:visibility="gone"
            tools:text="right"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ensd_toolbar_iv_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:src="@drawable/aui_icon_camera"
            tools:text="RightTitle"
            tools:visibility="visible" />

    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/ensd_toolbar_view_line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#cccccc" />

</LinearLayout>
